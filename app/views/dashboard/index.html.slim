= render partial: 'header'

.card.data-card
  - if @error.present?
    .notification.is-danger = @error
  - else
    h3.title #{@title}:
    .hint A secret such as a cryptocurrency private key (1 - 512 bits)
    p.text = @split_key.html_safe

    h3.title Story:
    .hint A series of phrases intended for human visualization and longterm memory
    p.text = @humanized.html_safe

    h3.title Seed Phrase:
    .hint Useful for deriving other private keys
    p.text = @tokenized

= render 'form'
= render 'footer'
